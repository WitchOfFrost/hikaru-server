generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model web {
  setting String @id @db.VarChar(128)
  value   String @db.VarChar(4096)
}

model accounts {
  id       Int    @id @default(autoincrement())
  username String @unique(map: "Usernames") @db.VarChar(16)
  password String @db.Char(60)
  email    String @unique(map: "Email") @db.VarChar(128)
  users    users?
}

model users {
  account_id           Int                    @id @default(autoincrement())
  country_code         String?                @db.Char(2)
  join_date            DateTime?              @default(now()) @db.Timestamp(6)
  groups               Int[]
  seasonal_backgrounds seasonal_backgrounds[]
  accounts             accounts               @relation(fields: [account_id], references: [id], map: "users_account_id_seq")
}

model seasonal_backgrounds {
  internal_id String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  url         String   @db.VarChar(512)
  user        Int      @default(1)
  expiry      DateTime @db.Timestamp(6)
  users       users    @relation(fields: [user], references: [account_id])

  @@map("seasonal-backgrounds")
}

model groups {
  internal_id     String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  colour          String   @db.Char(7)
  has_listing     Boolean
  has_playmodes   Boolean
  id              Int      @unique(map: "id") @default(autoincrement())
  identifier      String   @db.VarChar(16)
  is_probationary Boolean
  name            String   @db.VarChar(256)
  playmodes       String[] @db.Char(1)
  short_name      String   @unique(map: "short_name") @db.VarChar(3)
}
